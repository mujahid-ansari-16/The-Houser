<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-black via-gray-900 to-gray-800 min-h-screen flex flex-col">
      <%- include('../partials/nav') %>
      <main class="container mx-auto bg-gradient-to-br from-gray-900 via-gray-800 to-black shadow-2xl rounded-2xl p-8 mt-10 mb-10 max-w-6xl animate-fade-in-down transition-all duration-500">
          <h2 class="text-3xl font-extrabold text-yellow-400 text-center mb-8 tracking-widest animate-pulse drop-shadow-lg">
              Details of <%= home.houseName %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
              <div class="rounded-2xl overflow-hidden shadow-lg border-2  border-gray-800 hover:border-yellow-400 transition-all  duration-300 ">
                  <img src="<%= home.photo %>" alt="<%= home.name %>" class="w-full h-96 object-cover group-hover:opacity-90 transition-opacity duration-300">
              </div>
              
              <div class="space-y-8">
                  <div class="border-b border-gray-800 pb-4">
                      <h3 class="text-2xl font-bold text-yellow-300 mb-2 tracking-wide">Description</h3>
                      <p class="text-gray-300"><%= home.description %></p>
                  </div>

                  <div class="border-b border-gray-800 pb-4">
                      <h3 class="text-2xl font-bold text-yellow-300 mb-2 tracking-wide">Location</h3>
                      <p class="text-gray-300 flex items-center"><i class="fas fa-map-marker-alt mr-2 text-yellow-400"></i><%= home.location %></p>
                  </div>
                  
                  <div class="border-b border-gray-800 pb-4">
                      <h3 class="text-2xl font-bold text-yellow-300 mb-2 tracking-wide">Price</h3>
                      <p class="text-yellow-400 text-xl font-bold bg-gray-900 px-3 py-1 rounded-full shadow-inner inline-block">₹<%= home.price %> / night</p>
                  </div>
                  
                  <div class="border-b border-gray-800 pb-4">
                      <h3 class="text-2xl font-bold text-yellow-300 mb-2 tracking-wide">Rating</h3>
                      <div class="flex items-center">
                          <span class="text-yellow-400 text-2xl ">★</span>
                          <span class="ml-2 text-lg text-yellow-200 font-semibold"><%= home.rating %> / 5</span>
                      </div>
                  </div>
                  <div class="border-b border-gray-800 pb-4">
                      <h3 class="text-2xl font-bold text-yellow-300 mb-2 tracking-wide">Contact Us</h3>
                      <p class="text-gray-300"><%= home.contact %></p>
                  </div>
                  <div class="mt-4">
                    <%- include('../partials/favourite') %>
                  </div>
              </div>
          </div>
      </main>
      <% if (!isLoggedIn) { %>
        <%- include('../partials/Footer/home-footer') %>
      <% } else if (userType === 'guest') { %>
        <%- include('../partials/Footer/guest-footer') %>
      <% } else if (userType === 'host') { %>
        <%- include('../partials/Footer/host-footer') %>
      <% } %>
  </body>
</html>