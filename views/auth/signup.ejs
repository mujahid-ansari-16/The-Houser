<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-black via-gray-900 to-gray-800 min-h-screen flex flex-col">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-10 mb-10 p-8 bg-gradient-to-br from-gray-900 via-gray-800 to-black rounded-2xl shadow-2xl max-w-lg animate-fade-in-down">
        <h1 class="text-4xl font-extrabold mb-8 text-center text-yellow-400 tracking-widest drop-shadow-lg animate-pulse">Create your account in Houser</h1>

        <form action="/signup" method="POST" class="max-w-md mx-auto space-y-6">
            <%- include('../partials/error')%>

            <div class="relative mb-6">
                <input
                    type="text"
                    name="firstName"
                    value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                    placeholder="Enter Your First Name"
                    class="w-full px-5 py-3 border border-gray-700 bg-gray-900 text-yellow-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-yellow-500 focus:border-yellow-400 transition-all duration-300 shadow-inner placeholder-gray-500"
                    required
                />
                <div class="absolute right-4 top-1/2 transform -translate-y-1/2 text-yellow-400 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </div>
            </div>

            <div class="relative mb-6">
                <input
                    type="text"
                    name="lastName"
                    value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                    placeholder="Enter Your Last Name"
                    class="w-full px-5 py-3 border border-gray-700 bg-gray-900 text-yellow-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-yellow-500 focus:border-yellow-400 transition-all duration-300 shadow-inner placeholder-gray-500"
                    required
                />
                <div class="absolute right-4 top-1/2 transform -translate-y-1/2 text-yellow-400 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </div>
            </div>

            <div class="relative mb-6">
                <input
                    type="email"
                    name="email"
                    value="<%= oldInput.email ? oldInput.email : '' %>"
                    placeholder="Enter Your Email"
                    class="w-full px-5 py-3 border border-gray-700 bg-gray-900 text-yellow-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-yellow-500 focus:border-yellow-400 transition-all duration-300 shadow-inner placeholder-gray-500"
                    required
                />
                <div class="absolute right-4 top-1/2 transform -translate-y-1/2 text-yellow-400 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
            </div>

            <div class="relative mb-6">
                <input
                    id="password"
                    type="password"
                    name="password"
                    placeholder="Enter Your Password"
                    class="w-full px-5 py-3 border border-gray-700 bg-gray-900 text-yellow-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-yellow-500 focus:border-yellow-400 transition-all duration-300 shadow-inner placeholder-gray-500"
                    required
                />
                <button
                    type="button"
                    id="togglePassword"
                    class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer select-none focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-opacity-50 bg-gray-800 bg-opacity-60 rounded-full p-2 transition-all duration-200 hover:bg-yellow-400 hover:bg-opacity-20 active:scale-90"
                    aria-label="Toggle password visibility"
                >
                    <svg
                        class="w-6 h-6 text-yellow-400 hover:text-yellow-300 transition-colors duration-200"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                    >
                        <g id="eye-base">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                            />
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                            />
                        </g>
                        <line
                            id="eye-slash"
                            x1="4"
                            y1="4"
                            x2="20"
                            y2="20"
                            stroke-width="2"
                            stroke-linecap="round"
                            class="transition-opacity duration-200"
                        />
                    </svg>
                </button>
            </div>

            <div class="relative mb-6">
                <input
                    id="confirmPassword"
                    type="password"
                    name="confirmPassword"
                    placeholder="Enter Your Confirm Password"
                    class="w-full px-5 py-3 border border-gray-700 bg-gray-900 text-yellow-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-yellow-500 focus:border-yellow-400 transition-all duration-300 shadow-inner placeholder-gray-500"
                    required
                />
                <button
                    type="button"
                    id="toggleConfirmPassword"
                    class="absolute right-4 top-1/2 transform -translate-y-1/2 cursor-pointer select-none focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-opacity-50 bg-gray-800 bg-opacity-60 rounded-full p-2 transition-all duration-200 hover:bg-yellow-400 hover:bg-opacity-20 active:scale-90"
                    aria-label="Toggle confirm password visibility"
                >
                    <svg
                        class="w-6 h-6 text-yellow-400 hover:text-yellow-300 transition-colors duration-200"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                    >
                        <g id="eye-base-confirm">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                            />
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                            />
                        </g>
                        <line
                            id="eye-slash-confirm"
                            x1="4"
                            y1="4"
                            x2="20"
                            y2="20"
                            stroke-width="2"
                            stroke-linecap="round"
                            class="transition-opacity duration-200"
                        />
                    </svg>
                </button>
            </div>

            <div class="flex items-center space-x-4 mb-4">
                <span class="text-yellow-400 font-semibold">User Type:</span>
                <label class="flex items-center space-x-2">
                    <input type="radio" name="userType" value="guest" id="guest" checked class="accent-yellow-400 focus:ring-2 focus:ring-yellow-400" />
                    <span class="text-yellow-200">Guest</span>
                </label>
                <label class="flex items-center space-x-2">
                    <input type="radio" name="userType" value="host" id="host" class="accent-yellow-400 focus:ring-2 focus:ring-yellow-400" />
                    <span class="text-yellow-200">Host</span>
                </label>
            </div>

            <div class="flex items-center mb-4">
                <input type="checkbox" name="terms" id="terms" class="accent-yellow-400 focus:ring-2 focus:ring-yellow-400 mr-2" required />
                <label for="terms" class="text-gray-300">I agree to the terms and conditions</label>
            </div>

            <input
                type="submit"
                value="Register"
                class="w-full mt-2 bg-yellow-400 text-gray-900 py-3 rounded-xl font-bold text-lg tracking-widest shadow-lg hover:bg-yellow-500 hover:scale-105 transition-all duration-300 active:scale-95"
            />
        </form>
    </main>

    <%- include('../partials/Footer/home-footer') %>

    <script>
        const passwordInput = document.getElementById('password');
        const togglePasswordButton = document.getElementById('togglePassword');
        const eyeSlashPassword = document.getElementById('eye-slash');

        const confirmPasswordInput = document.getElementById('confirmPassword');
        const toggleConfirmPasswordButton = document.getElementById('toggleConfirmPassword');
        const eyeSlashConfirmPassword = document.getElementById('eye-slash-confirm');

        function setupPasswordToggle(inputElement, toggleButtonElement, slashElement) {
            let isVisible = false;
            slashElement.style.opacity = '1'; // Ensure slash is visible initially

            toggleButtonElement.addEventListener('click', function() {
                isVisible = !isVisible;
                inputElement.type = isVisible ? 'text' : 'password';
                inputElement.focus(); // Re-focus to maintain cursor position
                slashElement.style.opacity = isVisible ? '0' : '1';

                toggleButtonElement.classList.add('scale-95');
                setTimeout(() => {
                    toggleButtonElement.classList.remove('scale-95');
                }, 100);
            });

            toggleButtonElement.addEventListener('mousedown', function(e) {
                e.preventDefault();
            });
        }

        setupPasswordToggle(passwordInput, togglePasswordButton, eyeSlashPassword);
        setupPasswordToggle(confirmPasswordInput, toggleConfirmPasswordButton, eyeSlashConfirmPassword);
    </script>
</body>
</html>